@model BugTracker.Models.ChangeNameViewModel
@{
    ViewBag.Title = "Change Name";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Name Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.OldName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.NameFor(m => m.OldName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.NameFor(m => m.NewName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.NameFor(m => m.ConfirmName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Name" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

